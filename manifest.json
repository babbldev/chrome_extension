{
    "manifest_version": 2,
    "name": "babbl for Investors",
    "version": "0.0.01",
    "description": "Get impactful analysis of your financial news.",
    "permissions": [
        "contextMenus",
        "tabs",
        "storage", 
        "activeTab",
        "declarativeContent",
        "notifications",
        "management"
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128":"icon.png" 
    },
    "commands": {
        "send_article": {
          "suggested_key": {
            "default": "Ctrl+Shift+A",
            "mac": "Command+Shift+A"
          },
          "description": "Send Article off for analysis"
        }
    }
}